<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCityActivity">

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:background="@color/blue_300">

    <EditText
        android:id="@+id/search_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tìm kiếm tên thành phố"
        android:layout_gravity="center"
        android:layout_marginRight="30dp"
        />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textViewCityIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_toolbar"
        android:layout_marginLeft="25dp"
        android:text="Thành phố trong nước"
        android:textSize="20dp" />

    <Button
        android:id="@+id/haiphong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:text="Hai Phong"
        android:layout_below="@id/textViewCityIn"/>

    <Button
        android:id="@+id/cantho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Can Tho"
        android:layout_toRightOf="@+id/haiphong"
        android:layout_alignBaseline="@id/haiphong"
        />



</RelativeLayout>